{
  "name": "deutschland-lernt-selbst",
  "version": "0.1.0",
  "author": "David Pomerenke",
  "description": "Plattform zum Austauschen von Selbstlern-Material für die Lehrpläne aller Bundesländer.",
  "homepage": "https://lernplattform.wiki",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidpomerenke/deutschland-lernt-selbst-proto.git"
  },
  "license": "GPL-3.0-or-later",
  "private": true,
  "keywords": [
    "education",
    "self-learning",
    "platform",
    "germany",
    "bildung",
    "selbstlernen",
    "plattform",
    "deutschland"
  ],
  "scripts": {
    "elm:build": "elm make src/Main.elm --output=public/main.js",
    "elm:graphql-api": "elm-graphql https://lernplattform-graphql.herokuapp.com/v1/graphql --base Database",
    "gq:schema": "yarn --silent graphqurl https://lernplattform-graphql.herokuapp.com/v1/graphql --introspect > datenbank/schema.graphql",
    "pg": "yarn heroku pg:psql postgresql-slippery-92508 --app lernplattform-api",
    "pg:schema": "bash datenbank/dump-schema.sh",
    "pg:backup": "bash datenbank/backup.sh"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^4.0.3",
    "cheerio": "^1.0.0-rc.3",
    "graphqurl": "^0.3.3",
    "heroku": "^7.39.2",
    "now-cli": "^0.0.0",
    "pg-escape": "^0.2.0",
    "sqlutils": "^1.2.0",
    "sync-request": "^6.1.0"
  },
  "dependencies": {
    "pg": "^8.0.0"
  },
  "engines": {
    "node": ">=12.0"
  }
}
